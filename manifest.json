{
    "manifest_version": 3,
    "name": "Currency Exchange",
    "version": "1.0",
    "description": "Web extension for real time and acurate currency exchange",
    "action": {
        "default_popup": "src/popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "host_permissions": [
        "https://restcountries.com/*",
        "https://api.exchangerate.host/*"
    ]
}